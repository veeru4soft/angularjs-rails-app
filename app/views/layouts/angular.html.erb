<!DOCTYPE html>
<html ng-app="PostCommentRails" ng-controller="AppCtrl">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=Edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Device Angular</title>

    <%= stylesheet_link_tag    "application", :media => "all" %>
    <%= csrf_meta_tags %>

	<style>
		a:hover {
			text-decoration: none;
			cursor: pointer;		
		}
	</style>
</head>
<body>
   <div class="navbar">
     <div class="navbar-inner">
        <div class="container">
			<div ng-show="admin">
				<span ng-show="admin">
			        <a class="brand" href="/#/projects"><i class="icon-home"></i>&nbsp;Todo Application</a>
				</span>
				<span ng-hide="admin">			
			      	<a class="brand" href="/"><i class="icon-home"></i>&nbsp;Todo Application</a>
				</span>
			</div>
			<div ng-hide="admin">
				<span ng-show="normal_user">			
			        <a class="brand" href="/#/todo_home"><i class="icon-home"></i>&nbsp;Todo Application</a>
				</span>
				<span ng-hide="normal_user">			
			      	<a class="brand" href="/"><i class="icon-home"></i>&nbsp;Todo Application</a>
				</span>
			</div>

          <div class="navbar-content">

					<span ng-show="admin">
								<!-- Admin Menu Bar -->
				      <ul class="nav " ng-show="admin">
								<li> <a href="/#/projects">Projects</a> </li>
								<li> <a href="/#/tasks/add"> Create Task </a> </li>
								<li> <a href="/#/todos"> Todos </a> </li>
							</ul>
					</span>

					<span ng-hide="admin">
							<!-- Normal User Menu Bar -->
						<ul class="nav" ng-show="current_person">
							<li> <a href="/#/todo_home"> Overview</a> </li>
							<li class="dropdown" ng-animate="'animate'">
									<a class="dropdown-toggle" data-toggle="dropdown" href="#" >
									<span ng-controller="TodoHomeCtrl">
									{{current_person.email}} </span> <span class="caret"></span>
								</a>
								<ul class="dropdown-menu" role="menu">
									<li> <a href="/#/user"> User View</a> </li>
									<li> <a href="/#/"> Test</a> </li>
								</ul>
							</li>
						</ul>
					</span>

			<span ng-show="loggedin" >
				<span class="pull-right" ng-controller="RecordCtrl">
					<a ng-click="logout()" class="pull-right">Logout</a>
				</span>
			</span>
			<span ng-hide="loggedin">
				<span class="pull-right"> 
					<a href="/#/users/login" >Login</a> 
				</span>
			</span>
          </div>
        </div>
      </div>
    </div>

    <div class="container-narrow">
        <%= bootstrap_flash %>
        <div ng-view></div>
    </div>

    <%= javascript_include_tag "application" %>
</body>
</html>
